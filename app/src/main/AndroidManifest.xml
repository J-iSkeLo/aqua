<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="l.chernenkiy.aqua">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/aqua_m_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/aqua_m_icon"
        android:supportsRtl="true"
        android:configChanges="orientation"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">


        <activity android:name=".SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action     android:name="android.intent.action.MAIN" />

                <category   android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
        <action     android:name="android.intent.action.MAIN" />

        <category   android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Fish.Fish"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Equipment.EquipmentAccessActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Equipment.Aquariums"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Equipment.Chemistry"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Equipment.Feed"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Equipment.CategoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Delivery.Delivery"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".MyListCart"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".ShoppingBasket.ShopBaskTest"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".AboutUs"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Contacts"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Order.Order"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".Helpers.SearchActivity"
                  android:launchMode="singleTop"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data  android:name="android.app.searchable"
                        android:resource="@xml/searchable"/>
        </activity>

        <provider android:name=".Helpers.MySuggestionProvider"
            android:authorities=".Helpers"
            android:enabled="true"
            android:exported="true"/>

        <meta-data android:name="preloaded_fonts"
                   android:resource="@array/preloaded_fonts" />

    </application>

</manifest>