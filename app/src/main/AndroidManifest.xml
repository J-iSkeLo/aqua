<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="l.chernenkiy.aqua">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/aqua_m_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/aqua_m_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name=".Equipment.Aquariums"></activity>
        <activity android:name=".Equipment.Chemistry" />
        <activity android:name=".Equipment.Feed" />
        <activity android:name=".Equipment.CategoryActivity" />

        <activity
            android:name=".Equipment.EquipmentAccessActivity"
            android:label="@string/title_activity_equipment_accessories_"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".Helpers.SearchActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data  android:name="android.app.searchable"
                        android:resource="@xml/searchable"/>
        </activity>


        <provider
            android:name=".Helpers.MySuggestionProvider"
            android:authorities="l.chernenkiy.aqua.Helpers.MySuggestionProvider" />


        <activity android:name=".Delivery.Delivery" />

        <activity android:name=".My_Order.MyListCart" />
        <activity android:name=".ShoppingBasket.ShopBaskTest" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutUs">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Contacts">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Fish.Fish">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".My_Order.Order">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>