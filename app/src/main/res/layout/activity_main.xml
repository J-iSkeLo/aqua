<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    app:layout_gravity="center"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_delivery"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/btn_black_press_white"
        android:drawableTop="@drawable/delivery_icon_logo_btn"
        android:elevation="0dp"
        android:paddingTop="10dp"
        android:text="Доставка"
        android:textAlignment="center"
        android:textColor="@color/colorTextCart"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_contacts"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_black_press_white"
        android:drawableTop="@drawable/contact_icon_logo_btn"
        android:elevation="0dp"
        android:paddingTop="10dp"
        android:text="@string/contacts"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_last_shop"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/btn_black_press_white"
        android:drawableTop="@drawable/shop_bask_icon_btn"
        android:elevation="0dp"
        android:paddingTop="10dp"
        android:text="Мой заказ"
        android:textAlignment="center"
        android:textColor="@color/colorTextCart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/updateDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_delivery"
        tools:ignore="MissingConstraints,UnknownId" />

    <Button
        android:id="@+id/btn_about_us"
        android:layout_width="135dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/btn_black_press_white"
        android:drawableTop="@drawable/about_logo_btn"
        android:elevation="0dp"
        android:paddingTop="10dp"
        android:text="@string/about_us"
        android:textColor="@color/colorTextCart"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/updateDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_contacts" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="239dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_main" />

    <TextView
        android:id="@+id/updateDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/colorTextCart"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffff"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>