<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    app:corner_radius="7dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delete_item_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Удалить позицию?"
            android:textAlignment="center"
            android:textColor="@color/colorTextCart"
            android:textSize="17sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/ok_btn_dialog_deleteItem"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_dialog_clear_shopbask"
                android:padding="5dp"
                android:text="Удалить"
                android:drawableStart="@drawable/ic_delete_black_24dp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/cancel_btn_dialog_deleteItem"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/btn_dialog_cancel_clear_shopbask"
                android:gravity="center|center_horizontal|center_vertical"
                android:drawableStart="@drawable/ic_clear_red_24dp"
                android:padding="10dp"
                android:text="Отмена"
                android:textColor="#C91818"
                android:textAlignment="center"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>