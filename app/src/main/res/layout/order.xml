<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".ShoppingBasket.ShoppingBasket">

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_order"
        android:text="Отправить заказ"
        android:textColor="#E5F3FC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/first_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:cursorVisible="true"
            android:hint="*Имя Фамилия"
            android:inputType="textCapWords"
            android:maxEms="50"
            android:minEms="2"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextCart"
            android:textColorHighlight="#AE353535"
            android:textColorHint="#998B8B8B"
            android:textColorLink="#00000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="*Город:"
            android:imeOptions="actionDone"
            android:cursorVisible="true"
            android:inputType="textCapWords"
            android:minEms="2"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextCart"
            android:textColorHighlight="#AE353535"
            android:textColorHint="#998B8B8B"
            android:textColorLink="#00000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/number_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:hint="*Номер телефона:"
            android:imeOptions="actionDone"
            android:cursorVisible="true"
            android:inputType="phone"
            android:minEms="10"
            android:textColor="@color/colorTextCart"
            android:textColorHighlight="#AE353535"
            android:textColorHint="#99707070"
            android:textColorLink="#00000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/comment_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:cursorVisible="true"
            android:hint="Комментарий к заказу:"
            android:imeOptions="actionDone"
            android:inputType="textLongMessage"
            android:maxEms="500"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextCart"
            android:textColorHighlight="#AE353535"
            android:textColorHint="#998B8B8B"
            android:textColorLink="#00000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="* - поле обязательное для заполнения!"
            android:textSize="12dp" />

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03666c"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Оформить заказ"
        app:titleTextColor="#ffffff" />

</androidx.constraintlayout.widget.ConstraintLayout>