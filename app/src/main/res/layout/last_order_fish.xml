<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ListView
        android:id="@+id/myListCart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:dividerHeight="1dp"
        android:drawSelectorOnTop="true"
        android:drawingCacheQuality="high"
        android:paddingBottom="60dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>


    <TextView
        android:id="@+id/txt_common_to_catalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Перейти в каталог"
        android:textColor="@color/design_default_color_primary_dark"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myListCart" />

    <TextView
        android:id="@+id/txt_last_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="@string/LastShop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/myListCart"
        app:layout_constraintEnd_toEndOf="@+id/myListCart"
        app:layout_constraintStart_toStartOf="@+id/myListCart"
        app:layout_constraintTop_toTopOf="@+id/myListCart" />

</androidx.constraintlayout.widget.ConstraintLayout>

